                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Flight"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Flights"
                ],
                "summary": "Create a new flight",
                "operationId": "429a30d2ba9b4c386fd85eefd684225e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "departure_airport_id",
                                    "arrival_airport_id",
                                    "flight_date",
                                    "arrival_date",
                                    "aircraft",
                                    "econom_free_seats",
                                    "business_free_seats",
                                    "econom_price",
                                    "business_price"
                                ],
                                "properties": {
                                    "departure_airport_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "arrival_airport_id": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "flight_date": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2025-05-20T10:00:00Z"
                                    },
                                    "arrival_date": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2025-05-20T12:00:00Z"
                                    },
                                    "aircraft": {
                                        "type": "string",
                                        "example": "Boeing 737"
                                    },
                                    "econom_free_seats": {
                                        "type": "integer",
                                        "example": 100
                                    },
                                    "business_free_seats": {
                                        "type": "integer",
                                        "example": 20
                                    },
                                    "econom_price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 150.5
                                    },
                                    "business_price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 300.75
                                    }
                                },
                                "type": "object"
                            }
