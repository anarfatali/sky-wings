        "/api/flights/search": {
            "post": {
                "tags": [
                    "Flights"
                ],
                "summary": "Search for flights",
                "operationId": "150ed1c7b5860c0e426df7636c01ede9",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
